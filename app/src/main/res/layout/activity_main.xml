<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.jackrabbitmobile.applewear.MainActivity"
    android:id="@+id/main_background"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/what_color_tv"
        android:text="What color"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/is_an_apple_tv"
        android:text="is an Apple?"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/what_color_tv"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:layout_below="@+id/is_an_apple_tv"
        android:id="@+id/red_view"
        android:background="@drawable/red_circle_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:elevation="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_below="@+id/is_an_apple_tv"
        android:id="@+id/gray_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/apple_icon"
        android:layout_marginTop="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <View
        android:layout_below="@+id/is_an_apple_tv"
        android:id="@+id/purple_view"
        android:layout_width="50dp"
        android:elevation="16dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/purple_circle_view" />

    <View
        android:visibility="invisible"
        android:id="@+id/center_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/purple_circle_view" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/correct_tv"
        android:text="Correct!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/center_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/red_tv"
        android:text="Red!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_below="@+id/center_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/checkmark_iv"
        android:src="@drawable/check_mark"
        android:tint="@android:color/white"
        android:layout_marginLeft="104dp"
        android:elevation="16dp"
        android:layout_marginTop="78dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</RelativeLayout>


